<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- android:sharedUserId="android.uid.system"-->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" tools:ignore="ProtectedPermissions" />

    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- unavailable in API 23 -->
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!--android 11 -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <!-- 11之前的写法 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.requestLegacyExternalStorage" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/MyAppTheme.NoActionBar">
        <!-- utils 模块 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name=".amodule.activity.TCMainActivity" />
        <activity
            android:name=".amodule.activity.TCSplashActivity"
            android:theme="@style/MyAppTheme.FullScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".amodule.activity.TCDrag2RightExitActivity"
            android:theme="@style/MyAppTheme.NoActionBar.Translucent" />
        <activity
            android:name=".amodule.activity.TCContainerActivity"
            android:theme="@style/MyAppTheme.NoActionBar.Translucent" />
        <activity android:name=".zxing.CaptureActivity" />

        <!-- UI -->
        <activity
            android:name=".amodule.activity.WidgetStepViewHActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".amodule.activity.WidgetStepViewVActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".amodule.activity.TCLiveLikeActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".amodule.activity.TCRadarActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".amodule.activity.TCMultiSelectPicActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".amodule.activity.TCGaugeActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".amodule.activity.TCSerialPortActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
    </application>

</manifest>